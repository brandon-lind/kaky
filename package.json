{
  "name": "kaky",
  "version": "1.0.0",
  "description": "A super simple chore invoicing app for (Ka)yla and (Ky)le.",
  "main": "index.js",
  "scripts": {
    "bootstrap": "node ./src/infrastructure/bootstrap-fauna-database.js",
    "prebuild": "echo 'setup faunaDB' && npm run bootstrap",
    "build": "npm-run-all --parallel build:**",
    "build:app": "(rm -rf ./public) && (mkdir -p ./public) && (cp ./src/app/*.* ./public) && (mkdir -p ./public/assets) && (cp -R ./src/app/assets/* ./public/assets)",
    "build:functions": "netlify-lambda build functions -c ./webpack.config.js",
    "start": "netlify-lambda serve functions -c ./webpack.config.js"
  },
  "proxy": {
    "/.netlify/functions": {
      "target": "http://localhost:9000",
      "pathRewrite": {
        "^/\\.netlify/functions": ""
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brandon-lind/kaky.git"
  },
  "author": "Brandon Lind <brandon@lindsoftware.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brandon-lind/kaky/issues"
  },
  "homepage": "https://github.com/brandon-lind/kaky#readme",
  "devDependencies": {
    "dotenv-webpack": "^2.0.0",
    "netlify-lambda": "^2.0.1",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "faunadb": "^2.14.2"
  }
}
